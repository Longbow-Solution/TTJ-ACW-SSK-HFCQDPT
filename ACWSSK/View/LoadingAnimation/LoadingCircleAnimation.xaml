<UserControl x:Class="ACWSSK.View.LoadingCircleAnimation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">

    <Grid Width="200" Height="200" >
        <Image Grid.Row="1" Margin="0" RenderOptions.BitmapScalingMode="HighQuality" gif:AnimationBehavior.SourceUri="/ACWSSK;component/Resources/Images/GIF/Loader.gif" gif:AnimationBehavior.AutoStart="True"  HorizontalAlignment="Center" Height="150"/>
    </Grid>
</UserControl>

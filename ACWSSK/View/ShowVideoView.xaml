<UserControl x:Class="ACWSSK.View.ShowVideoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ACWSSK.View"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1280">
    <Grid Height="800" Width="1280">
        <MediaElement Name="AdvertisementVideo"
                      Source="{Binding ShowVideoUri, UpdateSourceTrigger=PropertyChanged}"
                      LoadedBehavior="Play"
                      UnloadedBehavior="Stop"
                      Stretch="Uniform"
                      RenderOptions.BitmapScalingMode="LowQuality"
                      MediaOpened="MediaElement_MediaOpened"
                      MediaFailed="MediaElement_MediaFailed"
                      MediaEnded="MediaElement_MediaEnded"
                      IsMuted="True"/>
    </Grid>
</UserControl>
